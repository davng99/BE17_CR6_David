{% extends 'base.html.twig' %}
{% block body %}
<h1 class="text-center mt-5">Events</h1>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 mb-5">
    {% for event in events %}
    <div class="col d-flex justify-content-center mt-5">
        <div class="card" style="width: 24rem;">
            <img class="card-img-top" src="{{event.image}}" alt="{{event.name}}" height="200"
                style="object-fit: cover;">
            <div class="card-body">
                <h5 class="card-title">{{event.name}}</h5>
                <p class="card-text">{{event.date | date('F j, Y, g:i a')}}</p>
                <p class="card-text">{{event.description}}</p>
            </div>
            <div class="card-body">
                <a href="/details/{{event.id}}" class="btn btn-primary">Details</a>
                <a href="/edit/{{event.id}}" class="btn btn-warning">Edit</a>
                <a href="/delete/{{event.id}}" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}